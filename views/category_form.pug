extends layout 

block content 
    form.c-form(method='POST' action='')
        div.form-group
            label(for="name") Name: 
            input.form-control(type="text" id='name' name='name' required='true' min='1' placeholder='Name of category' value=(category === undefined ? '' : category.name))
        button.btn.create-btn(type='submit') Submit